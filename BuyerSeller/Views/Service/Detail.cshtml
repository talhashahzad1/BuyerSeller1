@model BuyerSeller.Models.Service

@{
    ViewData["Title"] = "Detail";
}


    <div class="col-md-10 mx-auto py-4">
        <div class="card">
            <div class="card-header bg-primary text-uppercase">
                <h4>Detail of @Model.Title </h4>
            </div>
            <div class="card-body bg-info">
                   <div class="row">
                       <div class="col-md-6">
                           <h3>Title:</h3>
                           <h3>Description:</h3>

                       </div>
                       <div class="col-md-6">
                           <h6>@Model.Title</h6>

                           <h6 class="">@Model.Description</h6>
                       </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h3>Tags:</h3>
                            <h3>Picture:</h3>


                        </div>
                        <div class="col-md-6">
                            <h6 class="">@Model.tags</h6>

                            <a><img src="~/Pictures/@Model.Picture" height="90" width="90" alt=""></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
                    </div> 
            </div>
        </div>
    </div>
 
 
